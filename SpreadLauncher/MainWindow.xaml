<Window x:Class="SpreadLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpreadLauncher"
        mc:Ignorable="d"
        Title="Spread Launcher (0.2b1)" Height="615" Width="539">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="88
                              *"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="461*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <Button Content="Load Assembly" Grid.Row="2" FontSize="24" Click="LoadAssembly_Click"/>
        <Image Source="Resources/spreadlogo.png" Grid.ColumnSpan="2"/>
        <Label x:Name="AssemblyLabel" Content="No Assembly Loaded!" Grid.Row="1" FontSize="18" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="PlayButton" Content="Play" Grid.Row="2" Grid.Column="1" FontSize="24" IsEnabled="False" Click="Play_Click"/>
    </Grid>
</Window>
